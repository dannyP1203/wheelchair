<?xml version="1.0"?>
<robot name="top"  xmlns:xacro="http://www.ros.org/wiki/xacro">
	<!-- tops -->
	<property name="top_radius" value="0.025" /> 
	<property name="top_height" value="0.2" />
	<property name="top_mass" value="1" /> <!-- in kg-->
  
	<macro name="cylinder_inertia" params="m r h">
		<inertia  ixx="${m*(3*r*r+h*h)/12}" ixy = "0" ixz = "0" iyy="${m*(3*r*r+h*h)/12}" iyz = "0" izz="${m*r*r/2}" /> 
	</macro>
  
	<xacro:macro name="top" params="lr parent translateX translateY translateZ"> <!-- lr: left, right -->
		<link name="${lr}_top">
		<visual>
			<origin xyz="0 0 0" rpy="0 0  0 " /> 
			<geometry>
				<cylinder length="${top_height}" radius="${top_radius}" />
			</geometry>
			<material name="white"><color rgba="1 1 1 1"/></material>
		</visual>
		<collision>
			<origin xyz="0 0 0" rpy="0 0 0" />
			<geometry><cylinder length="${top_height}" radius="${top_radius}" /></geometry>
		</collision>
		<inertial>
			<mass value="${top_mass}" />
			<origin xyz="0 0 0" />
			<cylinder_inertia  m="${top_mass}" r="${top_radius}" h="${top_height}" />
		</inertial>
	</link>

	<gazebo reference="${lr}_top">
		<material>Gazebo/White</material>
		<!-- <turnGravityOff>false</turnGravityOff> -->
	</gazebo>
	<!-- Il giunto puo essere solo fisso o continuo con il tag della trasmissione -->
	<joint name="${lr}_top_joint" type="continuous">
		<parent link="${parent}"/>
		<child link="${lr}_top"/>
		<origin xyz="${translateX} ${translateY} ${translateZ}" rpy="0 0 0" /> 
		<axis xyz="0 0 1" />
		<limit effort="100.0" lower="0.0" upper="0.0" velocity="100"/>
		<joint_properties damping="0.0" friction="0.0"/>
	</joint>

	<!-- Transmission is important to link the joints and the controller -->
	<transmission name="${lr}_top_joint_trans">
		<type>transmission_interface/SimpleTransmission</type>
		<joint name="${lr}_top_joint"/>
		<actuator name="${lr}_top_joint_motor">
			<hardwareInterface>EffortJointInterface</hardwareInterface>
			<mechanicalReduction>1</mechanicalReduction>
		</actuator>
    </transmission>
    
    </xacro:macro>
</robot>
