<?xml version='1.0'?>
<launch>

	<!-- ******************************************************************************************************************* -->
	
	<!-- ARGUMENTS -->
	
	<arg name="fusion" default="true"/>         	 <!-- Set to true to use the EKF odom->base_footprint TF (otherwise the ground truth will be used)  -->
	<arg name="navigation" default="false"/>         <!-- Set to true to run autonomous navigation algorithms -->
	<arg name="world" default="empty_world"/>		 <!-- Gazebo world to be loaded -->
	
	<!-- ******************************************************************************************************************* -->
	
	
	<!-- Gazebo -->
	<include file="$(find wheelchair_gazebo)/launch/wheelchair_gazebo.launch">
		<arg name="world" value="$(arg world)" />
	</include>
	
	<!-- Control -->
	<include file="$(find wheelchair_gazebo)/launch/wheelchair_control.launch" />
	
	<!-- Navigation -->
	<include file="$(find wheelchair_gazebo)/launch/wheelchair_navigation.launch">
		<arg name="world" value="$(arg world)" />
		<arg name="navigation" value="$(arg navigation)" />
		<arg name="fusion" value="$(arg fusion)" />
	</include>
	
	<!-- <node pkg="rqt_robot_steering" type="rqt_robot_steering" name="rqt_robot_steering"/>  -->
	<!-- <node pkg="rqt_multiplot" type="rqt_multiplot" name="rqt_multiplot"/> -->
	
</launch>
